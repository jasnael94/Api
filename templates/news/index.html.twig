{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Top News</h2>
            {% for article in news|slice(0, 5) %}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.description|slice(0, 100) }}...</p>
                        <a href="{{ article.url }}" target="_blank" class="btn btn-primary">Lire plus</a>
                    </div>
                </div>
            {% endfor %}
        </div>

{% endblock %}
