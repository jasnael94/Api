{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Top News</h2>
            {% for article in news|slice(0, 5) %}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.description|slice(0, 100) }}...</p>
                        <a href="{{ article.url }}" target="_blank" class="btn btn-primary">Lire plus</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-6">
            <h2>Pays</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Drapeau</th>
                        <th>Nom</th>
                        <th>Capitale</th>
                    </tr>
                </thead>
                <tbody>
                    {% for country in countries|slice(0, 10) %}
                    <tr>
                        <td>
                            <img src="{{ country.flags.svg }}" 
                                 alt="Drapeau {{ country.name.common }}" 
                                 width="50"
                            >
                        </td>
                        <td>{{ country.name.common }}</td>
                        <td>{{ country.capital.0 ?? 'N/A' }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
