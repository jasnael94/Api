{% extends 'base.html.twig' %}

{% block title %}Actualités - HomeController{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Top Actualités</h2>
            <div class="row">
                {% for article in news|slice(0, 5) %}
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            {% if article.urlToImage %}
                                <img src="{{ article.urlToImage }}" class="card-img-top" alt="{{ article.title }}">
                            {% else %}
                                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Image non disponible">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ article.title }}</h5>
                                <p class="card-text">{{ article.description|slice(0, 100) }}...</p>
                                <a href="{{ article.url }}" target="_blank" class="btn btn-outline-primary btn-block">Lire plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
